# Groq API Key (required for LLM-based assessment)
GROQ_API_KEY=your_groq_api_key_here

# Optional: Override default model
# GROQ_MODEL=llama-3.3-70b-versatile

# GPU/Device Configuration (auto-detect by default)
# Options: auto, cuda, mps, cpu
# "auto" = automatically detect best device (NVIDIA GPU > Apple Silicon > CPU)
EMOTION_DEVICE=auto
WHISPER_DEVICE=auto

# Batch size for emotion detection (0 = auto-detect based on GPU memory)
# Manual options: 1, 2, 4, 8, 16
EMOTION_BATCH_SIZE=0

# Whisper model size (tiny, base, small, medium, large)
# Larger = more accurate but slower and more memory
WHISPER_MODEL=base

# Language Profile for Motivation Scoring
# Options: native_english, non_native_english
# Non-native: Adjusted thresholds for accented English (slower pace, more pauses)
LANGUAGE_PROFILE=non_native_english
